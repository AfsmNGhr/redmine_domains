<h2>
  <% if params[:hosting] == '1' -%>
    <%= link_to l(:label_hosting_plural), { controller: 'domains', action: 'index', params: { hosting: '1' } }, remote: true %> &#187;
    <%=l(:label_hosting_new) %>
  <% else -%>
    <%= link_to l(:label_domain_plural), { controller: 'domains', action: 'index', params: { hosting: '0' } }, remote: true %> &#187;
    <%=l(:label_domain_new) %>
  <% end %>
</h2>

<%= labelled_form_for :domain, @domain, url: { controller: 'domains', action: 'create' }, html: { class: nil, 'data-remote' => 'true' } do |f| -%>
	<%= render partial: 'form', locals: { f: f, params: params } %>
	<p><%= submit_tag l(:button_create) %></p>
<% end -%>
